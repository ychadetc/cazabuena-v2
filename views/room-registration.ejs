<div class="room-registration-page">
    <main class="room-content">
        <section class="room-action">
            <button id="btnOpenAddRoom"><i class="fas fa-plus"></i>ADD ROOM</button>
        </section>

        <section class="room-table">
            <table>
                <thead>
                    <tr>
                        <th>Room Name</th>
                        <th>Location</th>
                        <th>Status</th>
                    </tr>
