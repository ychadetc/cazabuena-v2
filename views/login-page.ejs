<body class="whole">
	<img src="/assets/pixelcut-export.jpeg">

	

		<div class="form-container">
			<div class="left part">
				<div class="row header">
					<h2>Login <img src="/assets/login.png"> </h2>
				</div>

				
				
				<div class="row row1">

					
					
					<span>Username</span>
					
					<input type="text"  class="textbox" id="txtUsername">
				</div>
				<div class="row row2">
					<span>Password</span>
					<input type="password"  class="textbox" id="txtPassword"><img src="/assets/hide_pass.png" id="switch1">
					<img src="/assets/show_pass.png" id="switch2" style="display: none;">
				</div>
				<div class="row row3">
					<button type="submit"id="btnLogin">Login</button>
				</div>

		
			</div>
			<div class="right part">
				<img src="/assets/right-png.png">
			</div>
		</div>

	


<script type="text/javascript">
	const swtch1 = document.getElementById('switch1');
	const swtch2 = document.getElementById('switch2');
	const pass = document.getElementById('txtPassword');
	const btnLogin = document.getElementById('btnLogin');

	swtch1.addEventListener('click', function(){
		pass.type = "text";
		this.style.display = "none"
		swtch2.style.display = "block"
	});
	swtch2.addEventListener('click', function(){
		pass.type = "Password";
		this.style.display = "none"
		swtch1.style.display = "block"
	});

	//btnLogin.addEventListener('click', function(){
		//window.location.href = 'index.html';
	//});


	$(document).on('click', '#btnLogin', function(e){
		e.preventDefault();
        e.stopImmediatePropagation();
		var username = $("#txtUsername").val();
		var user_password =$("#txtPassword").val();

		var userData = {"username":username, "user_password":user_password};
		var JSONuserData = JSON.stringify(userData);

		$.ajax({
			url:"http://localhost:3000/loginEnter",
			type:"POST",
			data:JSONuserData,
			contentType:'application/json',
			success:function(data3){
				window.location.href = '/';

			},
			error:function(xhr, status, error){

				alert(error);

			}

		});

	})
</script>
